        <NavLink class="p-2 rounded-md hover:bg-gray-300/20 " href="" Match="NavLinkMatch.All">
            Home
        </NavLink>
        <NavLink class="p-2 rounded-md hover:bg-gray-300/20" href="counter">
            Counter
        </NavLink>
        <NavLink class="p-2 rounded-md hover:bg-gray-300/20" href="fetchdata">
            Fetch data
        </NavLink>
        <NavLink class="p-2 rounded-md hover:bg-gray-300/20" href="videojs">
            VideoJS
        </NavLink>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "hidden" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
