<div class="flex items-center justify-between bg-gray-900">
    <a class="h-14 p-3 text-xl text-white sm:w-64 sm:h-14" href="">BlazorSamples</a>
    <button class="m-2 px-2 py-1 bg-gray-200/30 border-gray-700 border-solid border rounded sm:hidden hover:border-gray-500 hover:border-2" title="Navigation menu" @onclick="ToggleNavMenu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
    </button>
